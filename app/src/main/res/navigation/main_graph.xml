<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.booking.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home"/>

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.booking.presentation.map.MapFragment"
        android:label="MapFragment"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_mapSearchFragment"
            app:destination="@id/mapSearchFragment" />
    </fragment>


    <!-- Record Fragment -->
    <fragment
        android:id="@+id/recordFragment"
        android:name="com.example.booking.presentation.record.RecordFragment"
        android:label="RecordFragment"
        tools:layout="@layout/fragment_record" />

    <!-- My Fragment -->
    <fragment
        android:id="@+id/myFragment"
        android:name="com.example.booking.presentation.mypage.MyFragment"
        android:label="MyFragment"
        tools:layout="@layout/fragment_my" />

    <!-- map Search Fragment -->
    <fragment
        android:id="@+id/mapSearchFragment"
        android:name="com.example.booking.presentation.map.MapSearchFragment"
        android:label="MapSearchFragment"
        tools:layout="@layout/fragment_map_search">

        <action
            android:id="@+id/action_mapSearchFragment_to_mapFragment"
            app:destination="@id/mapFragment"/>
    </fragment>

    <!-- Record Registration Fragment -->
    <fragment
        android:id="@+id/recordRegistrationFragment"
        android:name="com.example.booking.presentation.registration.RecordRegistrationFragment"
        android:label="RecordRegistrationFragment"
        tools:layout="@layout/fragment_record_registration">

        <action
            android:id="@+id/action_recordRegistrationFragment_to_recordRegistrationMapSearchFragment"
            app:destination="@id/recordRegistrationMapSearchFragment"/>
    </fragment>


    <!-- Record Registration Map Search Fragment -->
    <fragment
        android:id="@+id/recordRegistrationMapSearchFragment"
        android:name="com.example.booking.presentation.registration.RecordRegistrationMapSearchFragment"
        android:label="RecordRegistrationMapSearchFragment"
        tools:layout="@layout/fragment_record_registration_map_search">

        <action
            android:id="@+id/action_recordRegistrationMapSearchFragment_to_recordRegistrationFragment"
            app:destination="@id/recordRegistrationFragment"/>
    </fragment>


</navigation>