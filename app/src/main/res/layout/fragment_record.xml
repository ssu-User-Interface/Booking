<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFAF7">

    <LinearLayout
        android:id="@+id/fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="13dp">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tv_record_registration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center_horizontal"
                android:text="기록 작성하기"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="7dp"
            android:src="@drawable/ic_line_long" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/record_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/fragment_top">

        <LinearLayout
            android:id="@+id/layout_record_bookinfo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_record_book"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/iv_book_dummy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_top" />

            <LinearLayout
                android:id="@+id/layout_record_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_record_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="책 제목, "
                    android:textColor="@color/black"
                    android:textSize="29sp" />

                <TextView
                    android:id="@+id/tv_record_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="5번째 기록"
                    android:textColor="@color/black"
                    android:textSize="37sp" />

                <EditText
                    android:id="@+id/et_record_book_title"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/iv_record_title_background"
                    android:hint="기록 제목"
                    android:paddingStart="8dp"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_record_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:text="2024.10.11_오전 11:33"
            android:fontFamily="@font/pretendard_light"
            android:textSize="13sp"/>

        <LinearLayout
            android:id="@+id/layout_time_and_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/layout_record_time"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/iv_record_read_place_background"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/et_record_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="time"
                    android:hint="읽은 시간"
                    android:textSize="12sp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_record_page"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/iv_record_read_place_background"
                android:padding="8dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/et_record_page"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="읽은 페이지"
                    android:textSize="12dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_record_place"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/iv_record_read_place_background"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/et_record_place"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="장소"
                android:textSize="12sp"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:gravity="center_vertical|start"
                android:paddingEnd="10dp"/>

            <ImageView
                android:id="@+id/iv_record_search_place"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_home_search" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_record_like_phrase"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/iv_record_like_phrase_background"
            android:fontFamily="@font/pretendard_light"
            android:gravity="left"
            android:padding="8dp"
            android:hint="마음에 드는 구절"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_record_memo"
            android:layout_width="320dp"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/iv_record_memo_background"
            android:hint="메모"
            android:padding="8dp"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_light"
            android:gravity="left"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_record_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_book">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_save_record"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="9"
            android:background="@drawable/iv_record_button"
            android:text="기록 저장"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_complete_reading"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="9"
            android:background="@drawable/iv_record_button"
            android:text="독서 종료"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center" />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>