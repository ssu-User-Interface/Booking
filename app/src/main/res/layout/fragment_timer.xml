<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEBE0">

    <LinearLayout
        android:id="@+id/fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tv_record_registration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center_horizontal"
                android:text="기록 작성하기"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="330dp"
            android:layout_height="2px"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/pretendard_extrabold"
        android:text="01:42:00"
        android:textColor="#555555"
        android:textSize="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_top" />

    <View
        android:id="@+id/view_timer_round"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/ic_timer_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_timer" />

    <TextView
        android:id="@+id/tv_timer_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="시작"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/view_timer_round"
        app:layout_constraintEnd_toEndOf="@id/view_timer_round"
        app:layout_constraintStart_toStartOf="@id/view_timer_round"
        app:layout_constraintTop_toTopOf="@id/view_timer_round" />

    <View
        android:id="@+id/view_timer_line"
        android:layout_width="315dp"
        android:layout_height="2px"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_timer_round" />

    <View
        android:id="@+id/view_timer_book_bg"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_timer_widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_timer_line" />

    <View
        android:id="@+id/iv_timer_book"
        android:layout_width="58dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/img_book"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/view_timer_book_bg"
        app:layout_constraintStart_toStartOf="@id/view_timer_book_bg"
        app:layout_constraintTop_toTopOf="@id/view_timer_book_bg" />

    <TextView
        android:id="@+id/tv_timer_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="원미동 사람들"
        android:textColor="#5B5C59"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/iv_timer_book"
        app:layout_constraintTop_toTopOf="@id/view_timer_book_bg" />

    <TextView
        android:id="@+id/tv_timer_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-0.5dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="양귀자"
        android:textColor="#000000"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/iv_timer_book"
        app:layout_constraintTop_toBottomOf="@id/tv_timer_book_title" />

    <View
        android:id="@+id/view_timer_complete_btn"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/ic_timer_complete_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_timer_book_bg" />

    <TextView
        android:id="@+id/tv_timer_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="독서완료"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/view_timer_complete_btn"
        app:layout_constraintEnd_toEndOf="@id/view_timer_complete_btn"
        app:layout_constraintStart_toStartOf="@id/view_timer_complete_btn"
        app:layout_constraintTop_toTopOf="@id/view_timer_complete_btn" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>