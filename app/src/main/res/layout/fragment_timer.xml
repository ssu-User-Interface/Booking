<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEBE0">

    <LinearLayout
        android:id="@+id/fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_record_registration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_weight="8"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="16sp"
                android:text="기록 작성하기"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="right"/>

        </LinearLayout>

        <ImageView
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line_long"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/pretendard_extrabold"
        android:text="01:42:00"
        android:textSize="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_top" />

    <View
        android:id="@+id/view_timer_round"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_timer_round"
        app:layout_constraintTop_toBottomOf="@id/tv_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"/>

    <TextView
        android:id="@+id/tv_timer_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:text="시작"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toTopOf="@id/view_timer_round"
        app:layout_constraintBottom_toBottomOf="@id/view_timer_round"
        app:layout_constraintStart_toStartOf="@id/view_timer_round"
        app:layout_constraintEnd_toEndOf="@id/view_timer_round"/>

    <View
        android:id="@+id/view_timer_line"
        android:layout_width="315dp"
        android:layout_height="2px"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/view_timer_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="310dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_timer_line"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_timer_widget"/>


</androidx.constraintlayout.widget.ConstraintLayout>