<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEBE0">

    <TextView
        android:id="@+id/tv_book_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="책을 검색합니다"
        android:textSize="28sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_book_search"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_book_search_bg"
        android:paddingStart="15dp"
        android:hint="검색할 책을 입력하세요"
        android:textColorHint="#717171"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_book_search_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_book_search_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_book_search_icon"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/et_book_search"
        app:layout_constraintTop_toTopOf="@id/et_book_search"
        app:layout_constraintBottom_toBottomOf="@id/et_book_search"/>

    <Button
        android:id="@+id/bt_book_search_filter_button"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:text="책 제목"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_regular"
        android:background="@drawable/ic_book_search_filter_bg"
        android:drawableEnd="@drawable/ic_book_search_filter_icon"
        android:drawablePadding="-4dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_book_search"
        app:layout_constraintEnd_toEndOf="@id/et_book_search"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_book_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/bt_book_search_filter_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>