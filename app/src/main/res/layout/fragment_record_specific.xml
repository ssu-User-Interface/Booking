<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FBFAF7">

    <LinearLayout
        android:id="@+id/fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tv_record_registration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:layout_marginStart="-10dp"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center_horizontal"
                android:text="기록 모아보기"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="330dp"
            android:layout_height="2px"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@color/black" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_top"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/iv_record_main_book"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:background="@drawable/img_book"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_record_registration_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="책 제목"
            android:textColor="#555555"
            android:textSize="30sp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/iv_record_main_book"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_record_main_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="저자"
            android:textColor="#4D4D4D"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/iv_record_main_book"
            app:layout_constraintTop_toBottomOf="@id/tv_record_registration_book_title" />

        <ImageView
            android:id="@+id/iv_record_specific_ic"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/ic_record_pencil"
            app:layout_constraintTop_toBottomOf="@id/tv_record_main_book_author"
            app:layout_constraintStart_toEndOf="@id/iv_record_main_book"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_record_specific_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록 5개"
            android:textSize="8dp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/iv_record_specific_ic"
            app:layout_constraintTop_toBottomOf="@id/tv_record_main_book_author"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/tv_record_specific_count"
            app:layout_constraintTop_toBottomOf="@id/tv_record_main_book_author"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            >
            <ImageView
                android:id="@+id/iv_record_star1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_record_specific_star"/>
            <ImageView
                android:id="@+id/iv_record_star2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_record_specific_star"/>
            <ImageView
                android:id="@+id/iv_record_star3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_record_specific_star"/>
            <ImageView
                android:id="@+id/iv_record_star4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_record_specific_star"/>
            <ImageView
                android:id="@+id/iv_record_star5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_record_specific_star"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_record_specific_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.10.20 ~ 2024.11.15"
            android:textSize="8dp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toEndOf="@id/iv_record_main_book"
            app:layout_constraintTop_toBottomOf="@id/tv_record_specific_count"/>

        <TextView
            android:id="@+id/tv_record_specific_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 기분을 좋게 해 주는 현실적인 책"
            android:textSize="8dp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toEndOf="@id/iv_record_main_book"
            app:layout_constraintTop_toBottomOf="@id/tv_record_specific_date"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_record_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/layout_book"
        tools:listitem="@layout/fragment_record_specific_list_item" />

    <Button
        android:id="@+id/view_timer_complete_btn"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/ic_timer_complete_bg"
        android:fontFamily="@font/pretendard_bold"
        android:text="독서 시작하기"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

