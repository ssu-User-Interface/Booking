<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.home.HomeFragment"
    android:background="#EFEBE0">

    <TextView
        android:id="@+id/tv_login_title_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="북킹,"
        android:textSize="60dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_extrabold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="250px"
        android:layout_marginStart="110px"/>

    <TextView
        android:id="@+id/tv_login_title_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다!"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:lineHeight="60dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintTop_toBottomOf="@id/tv_login_title_booking"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="110px"/>

    <TextView
        android:id="@+id/tv_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="20dp"
        android:lineHeight="60dp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintTop_toBottomOf="@id/tv_login_title_welcome"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150px"
        android:layout_marginStart="110px"/>

    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="300dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_round_box" />

    <TextView
        android:id="@+id/tv_login_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:textSize="20dp"
        android:lineHeight="60dp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintTop_toBottomOf="@id/et_login_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100px"
        android:layout_marginStart="110px"/>

    <EditText
        android:id="@+id/et_login_pw"
        android:layout_width="300dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_login_round_box" />

    <TextView
        android:id="@+id/tv_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:lineHeight="60dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintTop_toBottomOf="@id/et_login_pw"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130px"
        android:layout_marginEnd="110px" />

    <TextView
        android:id="@+id/tv_login_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:lineHeight="60dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100px" />


</androidx.constraintlayout.widget.ConstraintLayout>