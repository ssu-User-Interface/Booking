<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEBE0">

    <LinearLayout
        android:id="@+id/fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tv_record_registration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:layout_marginStart="-10dp"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center_horizontal"
                android:text="도서 상세 보기"
                android:textColor="@color/black"
                android:textSize="17sp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1" />
        </LinearLayout>
        <View
            android:id="@+id/view_line"
            android:layout_width="330dp"
            android:layout_height="2px"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_book_search_detail_cover"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/img_book_search_detail_cover"
        app:layout_constraintTop_toBottomOf="@id/fragment_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/llayout_book_search_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_book_search_detail_cover"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_book_search_detail_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="12sp"
            android:textColor="#424242"
            android:fontFamily="@font/pretendard_regular"/>
        <TextView
            android:id="@+id/tv_book_search_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채식주의자"
            android:textSize="20sp"
            android:textColor="#424242"
            android:fontFamily="@font/pretendard_semibold"/>

        <TextView
            android:id="@+id/tv_book_search_detail_author_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저자"
            android:textSize="12sp"
            android:textColor="#424242"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_book_search_detail_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한강"
            android:textSize="20sp"
            android:textColor="#424242"
            android:fontFamily="@font/pretendard_semibold" />

        <TextView
            android:id="@+id/tv_book_search_detail_publisher_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출판사"
            android:textSize="12sp"
            android:textColor="#424242"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_book_search_detail_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="창비"
            android:textSize="20sp"
            android:textColor="#424242"
            android:fontFamily="@font/pretendard_semibold"/>

        <TextView
            android:id="@+id/tv_book_search_detail_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 페이지 수"
            android:textSize="12sp"
            android:textColor="#424242"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_book_search_detail_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="276"
            android:textSize="20sp"
            android:textColor="#424242"
            android:fontFamily="@font/pretendard_semibold"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/bt_book_search_detail_save"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_book_search_detail_save"
        android:text="저장하기"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/llayout_book_search_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>