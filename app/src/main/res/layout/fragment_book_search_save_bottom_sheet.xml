<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_book_search_save_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="1dp"
        android:background="@drawable/drawer_corner"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/fragment_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back_arrow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    android:id="@+id/tv_book_search_type_registration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center_horizontal"
                    android:text="도서 유형 선택하기"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="330dp"
                android:layout_height="2px"
                android:layout_marginStart="13dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_book_search_save_record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="독서 상태"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:id="@+id/l_layout_book_search_save_record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/bt_book_search_save_record_to_read"
                    android:layout_width="115dp"
                    android:layout_height="85dp"
                    android:text="읽을 책"
                    android:textColor="@color/text_color_selector"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="12sp"
                    android:background="@drawable/button_backgroung_selector"/>

                <Button
                    android:id="@+id/bt_book_search_save_record_reading"
                    android:layout_width="115dp"
                    android:layout_height="85dp"
                    android:text="읽는 책"
                    android:textColor="@color/text_color_selector"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="12sp"
                    android:background="@drawable/button_backgroung_selector" />

                <Button
                    android:id="@+id/bt_book_search_save_record_read"
                    android:layout_width="115dp"
                    android:layout_height="85dp"
                    android:textColor="@color/text_color_selector"
                    android:text="읽은 책"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="12sp"
                    android:background="@drawable/button_backgroung_selector" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_book_search_save_start_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="독서 시작일"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"/>

            <EditText
                android:id="@+id/et_book_search_save_start_day"
                android:layout_width="330dp"
                android:layout_height="28dp"
                android:background="@drawable/img_book_search_save_bg"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_book_search_save_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="독서량"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="14dp"
                android:layout_marginTop="9dp"/>

            <EditText
                android:id="@+id/et_book_search_save_amount"
                android:layout_width="330dp"
                android:layout_height="28dp"
                android:background="@drawable/img_book_search_save_bg"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_book_search_save_final_record_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="독서 기간"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="14dp"
                android:layout_marginTop="9dp"/>

            <LinearLayout
                android:id="@+id/l_layout_book_search_save_final_record_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/et_book_search_save_final_start_day"
                    android:layout_width="158dp"
                    android:layout_height="28dp"
                    android:background="@drawable/img_book_search_save_bg"
                    android:hint="시작일"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="#ACACAC"
                    android:textSize="11sp"
                    android:paddingStart="10dp"/>

                <EditText
                    android:id="@+id/et_book_search_save_final_end_day"
                    android:layout_width="158dp"
                    android:layout_height="28dp"
                    android:background="@drawable/img_book_search_save_bg"
                    android:hint="종료일"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="#ACACAC"
                    android:textSize="11sp"
                    android:paddingStart="10dp"
                    android:layout_marginStart="12dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_book_search_save_final_record_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한줄평"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="14dp"
                android:layout_marginTop="9dp"/>

            <EditText
                android:id="@+id/et_book_search_save_final_record_review"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:background="@drawable/img_book_search_save_bg"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/l_layout_book_search_save_final_record_score_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="9dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_book_search_save_final_record_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="평점"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:id="@+id/iv_book_search_save_final_record_star1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal|end"
                    android:src="@drawable/img_star_unselected"
                    android:layout_marginStart="200dp"/>

                <ImageView
                    android:id="@+id/iv_book_search_save_final_record_star2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_star_unselected" />

                <ImageView
                    android:id="@+id/iv_book_search_save_final_record_star3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_star_unselected" />

                <ImageView
                    android:id="@+id/iv_book_search_save_final_record_star4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_star_unselected" />

                <ImageView
                    android:id="@+id/iv_book_search_save_final_record_star5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_star_unselected" />

            </LinearLayout>



            <Button
                android:id="@+id/bt_book_search_save_save_record"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_record_save_bg"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="저장하기"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>